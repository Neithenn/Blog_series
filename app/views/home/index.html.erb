<div id="main_div" class="col-md-10 col-md-offset-1">

<br>

<div class="container-fluid"><p class="right_p">
			¿Crees saber lo que sucederá en tus series favoritas? <b>Compruébalo!</b></p>
		</div>


			<% if !user_signed_in?%>
			<div><h1 class="right_p">Empieza a votar ahora!</h1></div>
			<div class="row">
				<div class="col-md-6">
				<%= link_to "Registrarse", new_user_registration_path, :class => 'btn btn-default login front_btn_1' %>
			</div>
			<div class="col-md-6">
				<%= link_to "Ingresar", new_user_session_path, :class => 'btn btn-default login front_btn_2' %>
			</div>
		</div>
		<%else%>
		
			<h2 class="puntos"><strong>Puntos: <%= current_user.points%></strong></h2>
		<%end%>

		<hr>
		<br>


		<% @posts.each do|post|%>
		<div class="wrapper clearfix">
			
			<div class="col-1 post_resume">
		  		<%= image_tag(post.img , :alt => post.title, :class => "logo") %>
			</div>
			<div class="col-2 post_resume">
				<div class="vcenter2">
				 <div class="row">
					<div class="col-md-8">
						<p class="nopadding"><%= post.desc_serie %> | <%= l post.created_at, :format => "%Y-%m-%d" %></p>
					</div>
				</div>
				<h2 class="nopadding post_title"> <%= link_to post.title, post, :class => "post_title"%> </h2>
			</div>
			</div>
			<div class="col-3 post_resume vcenter2">

				<% if post.id_status == 1%>
				<p class="nopadding status a_conf"> A CONFIRMAR</p>
				<% elsif post.id_status == 2 %>
				<p class="nopadding status green"> CONFIRMADO</p>
				<%elsif post.id_status == 3%>
				<p class="nopadding status red"> RECHAZADO</p>
				<%else%>
				<p class="nopadding status">REVIEW</p>
				<% end %>
				<% if post.id_status != 4 %>
				<table class="center-votes">
					<tr>
						<td>
							<i class="fa fa-arrow-up green" aria-hidden="true"><%=post.get_upvotes.size%></i>
						</td><td>
								<i class="fa fa-arrow-down red" aria-hidden="true"><%=post.get_downvotes.size%></i>
						</td>
					</tr>
				</table>
				<%end%>
			</div>				
		</div>
		<%end%>

				<div class="links_home">
	<a onclick="javascript:window.open('http://twitter.com/share?text=Juego de teorias by @juegode_teorias - &amp;url=http://www.juegodeteorias.com', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
		<i class="fa fa-twitter"></i></a>

	<a onclick="javascript:window.open('http://facebook.com/sharer.php?u=http://www.juegodeteorias.com', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>

	<a onclick="javascript:window.open('http://plus.google.com/share?url=http://www.juegodeteorias.com', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>



</div>
				
</div>