<div class="container well">

<%= form_for @post do |f|%>
	<% if @post.errors.any? %>
	<h2><%= pluralize(@post.errors.count, "error") %> prevented this form from saving: </h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
	<% end %>

	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title, :class => "form-control" %>
	</p>

	<p>
		<%= f.label :content %><br />
		<%= f.text_area :content, :class => "form-control", :rows => "20" %>
	</p>


	<p>
		<%= f.submit "Create new post" %>
	</p>
<% end %>

</div>