<div class="container well">

<%= form_for @post do |f|%>
	<% if @post.errors.any? %>
	<h2><%= pluralize(@post.errors.count, "error") %> prevented this form from saving: </h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
	<% end %>

	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title, :class => "form-control" %>
	</p>

	<p>
		<%= f.label "Imagen ej> logo.jpg" %><br />
		<%= f.text_field :img, :class => "form-control" %>
	</p>


	<p>
		<%= f.label :id_serie%><br />
		<%= f.select(:id_serie, options_for_select([["got",1], ["twd",2], ["mr robot",3], ["4",4]])) %>
	</p>

	<p>
		<%= f.label "Nombre de la serie" %><br />
		<%= f.select(:desc_serie, options_for_select([["got","Game of Thrones"], ["twd","The Walking Dead"], ["mr robot","Mr. Robot"], ["4",4]])) %>
	</p>
	<p>
		<%= f.label :content %><br />
		<%= f.text_area :content, :class => "form-control", :rows => "20" %>
	</p>

	<p>
	<%= f.label "Estado"%><br />
		<%= f.select(:id_status, options_for_select([["A CONFIRMAR",1], ["CONFIRMADO",2], ["RECHAZADO",3]])) %>
	</p>
	<p>
		<%= f.label "Escrito por" %><br />
		<%= f.text_field :written_by, :class => "form-control" %>
	</p>

	<p>
		<%= f.label "Tipo del post"%><br />
		<%= f.select(:id_type, options_for_select([["Review",1], ["Teoria",2]])) %>
	</p>


	<p>
		<%= f.submit "Create new post" %>
	</p>
<% end %>

</div>