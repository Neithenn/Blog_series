
<div id="main_div">
<h1><%= @post.title %></h1>
<div id="content blog-post">

   <p><%= raw(@post.content) %></p>
</div>



<% if user_signed_in? %>

<table class='center-table'>
	<tr>
		<td>
	<%= link_to like_post_path(@post), method: :put do %>
	 <i class="fa fa-arrow-up green" aria-hidden="true"><%=@post.get_upvotes.size%></i>
	<%end%>
		</td>
		<td>
	<%= link_to dislike_post_path(@post), method: :put do %>
	 <i class="fa fa-arrow-down red" aria-hidden="true"><%= @post.get_downvotes.size%></i>
	<%end%>
		</td>
	</tr>
</table>


<% else %>

	<h2 class="center-title">Logeate ahora para votar!</h2>

<% end %>

</div>

<%= render 'disqus' %>