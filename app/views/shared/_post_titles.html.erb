<div id="main_div" class="col-md-10 col-md-offset-1">
<% @posts.each do|post|%>
		<div class="wrapper clearfix">
			
			<div class="col-1 post_resume">
		  		<%= image_tag(post.img , :alt => post.title, :class => "logo") %>
			</div>
			<div class="col-2 post_resume">
				 <div class="row">
					<div class="col-md-6">

				<% if post.id_status == 1%>
				<p class="nopadding"> <strong class="a_conf">A CONFIRMAR</strong> | <%= l post.created_at, :format => "%Y-%m-%d" %> </p>
				<% elsif post.id_status == 2 %>
				<p class="nopadding"> <strong class="green">CONFIRMADO</strong> | <%= l post.created_at, :format => "%Y-%m-%d" %> </p>
				<%elsif post.id_status == 3%>
				<p class="nopadding"> <strong class="red">RECHAZADO</strong> | <%= l post.created_at, :format => "%Y-%m-%d" %> </p>
				<%else%>
				<p class="nopadding"> <strong>REVIEW</strong> | <%= l post.created_at, :format => "%Y-%m-%d" %> </p>
				<% end %>

					</div>
				</div>
				<h2 class="nopadding post_title"> <%= link_to post.title, post, :class => "post_title"%> </h2>
			</div>
			<div class="col-3 post_resume vcenter">

			

				<table class="center-votes">
					<tr>
						<td>
							<i class="fa fa-arrow-up green" aria-hidden="true"><%=post.get_upvotes.size%></i>
						</td><td>
								<i class="fa fa-arrow-down red" aria-hidden="true"><%=post.get_downvotes.size%></i>
						</td>
					</tr>
				</table>

			</div>				
		</div>
		<%end%>

</div>